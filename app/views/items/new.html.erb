<h1> New Item for <%= @room.name %> </h1>
<%= form_with(model: @item, url: project_room_items_path(@project.id, @room.id, @item.id)) do |form| %>
    <div>
      <%= form.label :name %><br>
      <%= form.text_field :name %>
      <% @room.errors.full_messages_for(:title).each do |message| %>
          <div><%= message %></div>
      <% end %>
    </div>
  
    <div>
      <%= form.label :cost %><br>
      <%= form.text_area :cost %>
      <% @room.errors.full_messages_for(:body).each do |message| %>
          <div><%= message %></div>
      <% end %>
    </div>

  
    <div>
      <%= form.submit %>
    </div>
  <% end %>